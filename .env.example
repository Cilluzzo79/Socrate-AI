# Socrate AI - Environment Variables Template
# Copy this to .env and fill in your values

# === TELEGRAM ===
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
BOT_USERNAME=SocrateAIBot

# === DATABASE ===
# Railway will auto-provide DATABASE_URL
# For local development, use SQLite:
# DATABASE_URL=sqlite:///socrate_ai_dev.db

# === AI PROVIDERS ===
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# === APP CONFIGURATION ===
SECRET_KEY=your-random-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5000

# === STORAGE ===
STORAGE_PATH=./storage

# === OPTIONAL ===
# SENTRY_DSN=https://...  # For error tracking
# LOG_LEVEL=INFO
